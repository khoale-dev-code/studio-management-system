# Environment
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/studio-management
MONGODB_TEST_URI=mongodb://localhost:27017/studio-management-test

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# JWT
